<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<!-- to do: 这个界面将来还需要抽时间重新优化一下， 涉及到VBox控件高度设定和自适应的问题，主要是竖版自适应 -->
<VBox fx:id="leftMenu" alignment="TOP_LEFT" BorderPane.alignment="TOP_LEFT" maxWidth="Infinity" maxHeight="Infinity" prefWidth="400.0" prefHeight="768" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chinaunicom.elemeetingpc.controllers.MeetLeftController">
    <children>
        <HBox maxWidth="Infinity" minHeight="70.0" prefHeight="70.0" prefWidth="400.0">
            <children>
                <TextField editable="false" maxWidth="Infinity" prefHeight="70.0" minHeight="70.0" prefWidth="400.0" styleClass="meeting-welcome" text="%left_navigation.welcomePrompt" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox maxWidth="Infinity" minHeight="40.0" prefHeight="40.0" prefWidth="400.0">
            <children>
                <TextField fx:id="textFieldUsername" editable="false" maxWidth="Infinity" prefHeight="40.0" minHeight="40.0" prefWidth="400.0" styleClass="meeting-user" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <!-- 增加vbox用于放置滚动条, to do: 以下代码暂时不改了，因为改起来非常麻烦和费时间，如果要把高度订下来，则要算VBOX里面每一个控件的高度并做高度自适应，原理跟index界面一样-->
        <VBox fx:id="scrollableArea" fillWidth="false" prefWidth="400.0">
            <children>
                <HBox prefHeight="70.0" minHeight="70.0" prefWidth="400.0" style="-fx-background-color: #ffffff;">
                    <children>
                        <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="images/current_meeting.png" />
                            </image>
                            <HBox.margin>
                                <Insets left="10.0" top="10.0" />
                            </HBox.margin>
                        </ImageView>
                        <TextField editable="false" prefHeight="48.0" prefWidth="220.0" styleClass="meeting-list-title" text="%left_navigation.currentMeeting">
                            <HBox.margin>
                                <Insets top="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <ListView fx:id="meetCurrentListView" prefWidth="400.0" styleClass="meeting-list-view" />
                <HBox prefHeight="70.0" minHeight="70.0" prefWidth="400.0" style="-fx-background-color: #ffffff;">
                    <children>
                        <ImageView fitHeight="480" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="images/latest_meeting.png" />
                            </image>
                            <HBox.margin>
                                <Insets left="10.0" top="10.0" />
                            </HBox.margin>
                        </ImageView>
                        <TextField editable="false" prefHeight="48.0" prefWidth="220.0" styleClass="meeting-list-title" text="%left_navigation.upcomingMeeting">
                            <HBox.margin>
                                <Insets top="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <ListView fx:id="meetFutureListView" prefWidth="400.0" styleClass="meeting-list-view" />
                <HBox prefHeight="70.0" minHeight="70.0" prefWidth="400.0" style="-fx-background-color: #ffffff;">
                    <children>
                        <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="images/history_meeting.png" />
                            </image>
                            <HBox.margin>
                                <Insets left="10.0" top="10.0" />
                            </HBox.margin>
                        </ImageView>
                        <TextField editable="false" prefHeight="48.0" prefWidth="220.0" styleClass="meeting-list-title" text="%left_navigation.pastMeeting">
                            <HBox.margin>
                                <Insets top="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <ListView fx:id="meetHistoryListView" prefWidth="400.0" styleClass="meeting-list-view" />
                <!-- to do: 如果将来把上面的代码高度确定下来，按钮的位置就能确定下来了 -->
                <Button mnemonicParsing="false" onAction="#handleExit" prefHeight="50.0" minHeight="50.0" prefWidth="400.0" styleClass="exit-btn" text="%left_navigation.exit" textAlignment="CENTER" />
            </children>
        </VBox>
    </children>
</VBox>
